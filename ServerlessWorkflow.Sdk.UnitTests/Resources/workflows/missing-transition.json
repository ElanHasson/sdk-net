{
  "id": "compensation-test",
  "name": "Compensation Test",
  "version": "0.1.0",
  "specVersion": "0.8",
  "functions": [
    {
      "name": "is-odd",
      "type": "expression",
      "operation": ".number % 2 == 1"
    },
    {
      "name": "i-fail",
      "type": "rest",
      "operation": "http://somefail.com/fails#fake"
    }
  ],
  "states": [
    {
      "name": "Good odds",
      "type": "switch",
      "dataConditions": [
        {
          "name": "Is Odd",
          "condition": "${ fn:is-odd }",
          "end": true
        }
      ],
      "defaultCondition": {
        "transition": "Non existing state, should not be valid"
      }
    },
    {
      "name": "I have something to compensate...",
      "type": "operation",
      "actions": [
        {
          "name": "Call i-fail",
          "functionRef": {
            "refName": "i-fail"
          }
        }
      ],
      "compensatedBy": "Compensate",
      "end": true
    },
    {
      "name": "Compensate",
      "type": "inject",
      "data": {
        "status": "compensated"
      },
      "usedForCompensation": true,
      "end": true
    }
  ]
}