<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
	<Nullable>enable</Nullable>
    <NeutralLanguage>en</NeutralLanguage>
    <AssemblyVersion>0.8.5</AssemblyVersion>
    <FileVersion>0.8.5</FileVersion>
    <Version>0.8.5</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Company>ServerlessWorkflow.Sdk</Company>
    <Authors>The Serverless Workflow Specification Authors</Authors>
    <Product>ServerlessWorkflow .NET 6.0 SDK</Product>
    <Copyright>Copyright Â© 2021 The Serverless Workflow Specification Authors</Copyright>
    <PackageProjectUrl>https://github.com/serverlessworkflow/sdk-net</PackageProjectUrl>
    <RepositoryUrl>https://github.com/serverlessworkflow/sdk-net</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>serverless workflow sdk</PackageTags>
    <Description>The .NET 6.0 SDK for the Serverless Workflow</Description>
    <PackageIcon>icon.png</PackageIcon>
  </PropertyGroup>

  <PropertyGroup>
    <DocumentationFile>ServerlessWorkflow.Sdk.xml</DocumentationFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\media\logos\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CloudNative.CloudEvents" Version="2.5.1" />
    <PackageReference Include="Cronos" Version="0.7.1" />
    <PackageReference Include="FluentValidation.DependencyInjectionExtensions" Version="11.3.0" />
    <PackageReference Include="Iso8601DurationHelper" Version="1.0.5" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
    <PackageReference Include="Neuroglia.Serialization.Dynamic" Version="2.0.11" />
    <PackageReference Include="Neuroglia.Serialization.Json" Version="2.0.11" />
    <PackageReference Include="Neuroglia.Serialization.NewtonsoftJson" Version="2.0.11" />
    <PackageReference Include="Neuroglia.Serialization.Protobuf" Version="2.0.11" />
    <PackageReference Include="Neuroglia.Serialization.YamlDotNet" Version="2.0.11" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Newtonsoft.Json.Schema" Version="3.0.14" />
    <PackageReference Include="Octokit" Version="4.0.1" />
    <PackageReference Include="protobuf-net.Core" Version="3.1.25" />
    <PackageReference Include="YamlDotNet" Version="12.0.2" />
  </ItemGroup>

</Project>
